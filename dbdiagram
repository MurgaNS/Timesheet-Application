Table client {
  id long [pk,increment]
  name varchar [not null, unique]
  address varchar
  city varchar
  postal_code varchar
  country long [ref: > public.country.id]
      Indexes {
    (id) [unique]
  }

}

Table project {
  id long
  name varchar
  description varchar
  employee_id long [ref: <> public.employee.id]
  client_id long [ref: > public.client.id]
  lead long [ref: <> public.employee.id]
  status projects_status
    Indexes {
    (id, name, client_id) [pk]
  }
}

Table employee {
  id long [pk,increment]
  name varchar
  username varchar
  password varchar
  hours_per_week double [note: 'The number of hours per week can not be less than 0.5']
  email varchar [not null]
  status employee_status
  role employee_role
      Indexes {
      (id,email) [unique]
    }

}

Enum project_status {
  active
  inactive
  archived

}

Enum employee_status {
  active
  inactive

}

Enum employee_role {
  admin
  worker

}

Table category {
  id long [pk,increment]
  name varchar [not null, unique]
     Indexes {
    (id) [unique]
  }
}

Table work_log {
  id long [pk,increment]
  date date
  client_id long [ref: > client.id]
  project_id long [ref: > project.id]
  category_id long [ref: > category.id]
  description varchar
  hours double [note: 'The number of hours can not be less than 0.5']
  overtime double [note: 'The number of overtime hours can not be less than 0.5']
     Indexes {
    (id) [unique]
  }

}

Table country {
  id long [pk, increment]
  name varchar
  Indexes {
  (id) [unique]
  }

}